{
  "theme": "catppuccin",
  "background": "light",
  "applications": [
    {
      "name": "kde",
      "variables": {},
      "background_commands": {
        "dark": [
          "lookandfeeltool -a org.kde.breezedark.desktop >/dev/null 2>&1"
        ],
        "light": [
          "lookandfeeltool -a org.kde.breeze.desktop >/dev/null 2>&1"
        ]
      }
    },
    {
      "name": "google chrome",
      "variables": {
        "path": "~/.config/chrome-flags.conf"
      },
      "background_commands": {
        "dark": [
          "sed -i \"s|^--$|--enable-features=WebUIDarkMode|\" %path%",
          "sed -i \"s|^##$|--force-dark-mode|\" %path%"
        ],
        "light": [
          "sed -i \"s|--enable-features=WebUIDarkMode|--|\" %path%",
          "sed -i \"s|--force-dark-mode|##|\" %path%"
        ]
      }
    },
    {
      "name": "neovim",
      "variables": {
        "path": "~/.config/nvim/lua/config/options.lua"
      },
      "background_commands": {
        "dark": [
          "sed -i \"6s|background = .*|background = 'dark'|\" %path%"
        ],
        "light": [
          "sed -i \"6s|background = .*|background = 'light'|\" %path%"
        ]
      }
    },
    {
      "name": "alacritty",
      "variables": {
        "path": "~/.config/alacritty/alacritty.yml"
      },
      "background_commands": {
        "dark": [
          "sed -i \"17s|light|dark|\" %path%"
        ],
        "light": [
          "sed -i \"17s|dark|light|\" %path%"
        ]
      }
    },
    {
      "name": "tmux",
      "variables": {
        "path": "~/.config/tmux/tmux.conf"
      },
      "background_commands": {
        "dark": [
          "sed -i \"2s|light|dark|\" %path%",
          "tmux source-file %path%"
        ],
        "light": [
          "sed -i \"2s|dark|light|\" %path%",
          "tmux source-file %path%"
        ]
      }
    },
    {
      "name": "obs",
      "variables": {
        "path": "~/.config/obs-studio/global.ini"
      },
      "background_commands": {
        "dark": [
          "sed -i s|CurrentTheme3=.*|CurrentTheme3=Yami| %path%"
        ],
        "light": [
          "sed -i s|CurrentTheme3=.*|CurrentTheme3=Light| %path%"
        ]
      }
    },
    {
      "name": "onlyoffice",
      "variables": {
        "path": "~/.config/onlyoffice/DesktopEditors.conf"
      },
      "background_commands": {
        "dark": [
          "sed -i s|UITheme2=.*|UITheme2=theme-dark| %path%"
        ],
        "light": [
          "sed -i s|UITheme2=.*|UITheme2=theme-light| %path%"
        ]
      }
    }
  ]
}
